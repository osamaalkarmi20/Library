
   @model DataLayer.Models.DTO.CreationShelf
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create";
}

<h1 class="logo-right hidden-xs margin-bottom-60 ">Shelf</h1>
<div class="tm-right-inner-container">
    <h1 class="templatemo-header"> </h1>
    


    <div class="tm-right-inner-container">

        <h2 class="templatemo-header" style="color :#17A2B8"> Shelf Creation  </h2>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input asp-for="IsDeleted" hidden class="form-control" value="false" />

                        <div class="form-group">
                            <div class="col-md-6">
                        <label asp-for="Name" class="control-label font-weight-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">

                        <label asp-for="Type" class="control-label font-weight-bold"></label>
                                <select asp-for="Type" class="form-control" asp-items="ViewBag.Type"></select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                          
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                        <label class="form-check-label font-weight-bold" asp-for="IsActived ">Is Actived</label>
                      <input  asp-for="IsActived"  />
                    </div>
                        </div>
                       
                        <div class="form-group text-center">
                    <div class="col-md-6">
                        <input type="submit" value="Create" class="btn btn-info font-weight-bold" />
                    </div>
                </div>
                    </form>
                </div>
            </div>
       
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
