            @model DataLayer.Models.Shelf

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Shelf</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Are you sure you want to delete this shelf?</h4>
                </div>
                <div class="card-body">
                    <h4>Shelf Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Type)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Type.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.IsActived)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsActived)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.BookCount)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.BookCount)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
