 @model DataLayer.Models.Shelf

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Shelf Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Shelf Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Type)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Type.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.IsActived)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsActived)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.BookCount)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.BookCount)
                        </dd>
                    </dl>
                    <div class="text-center my-3">
                        <a asp-controller="Books" asp-action="CreateFromShelf" asp-route-id="@Model.Id" class="btn btn-success">Create Book for this Shelf</a>
                    </div>
                    <h4 class="my-3">Books in this Shelf</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Book Name</th>
                                <th>Book Author</th>
                                <th>Book Quantity</th>
                                <th>Book Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model.Books)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => book.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => book.Aurther)</td>
                                    <td>@Html.DisplayFor(modelItem => book.Quantity)</td>
                                    <td>@Html.DisplayFor(modelItem => book.Price)</td>
                                    <td>
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-info btn-sm">Details</a> |
                                        <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-center mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
