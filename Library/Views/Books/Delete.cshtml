@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizer<Shared> local
@model DataLayer.Models.Book

@{
    ViewData["Title"] = "Delete";
}
<h1 class="logo-right hidden-xs margin-bottom-60 ">     @local["Book"]</h1>
<div class="tm-right-inner-container">
    <h1 class="templatemo-header"> </h1>
    <h4 class="mb-0">@local["Are you sure you want to delete this?"]</h4>


    <div class="tm-right-inner-container">
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-5">
                    </div>
                </div>

                <div class="row">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @local["Name"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @local["Aurther"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Aurther)
                        </dd>
                        <dt class="col-sm-4">
                            @local["Quantity"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                        <dt class="col-sm-4">
                            @local["Price"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input asp-for="IsDeleted" hidden class="form-control" value="true" />

                        <div class="form-group text-center col-md-6">
                            <input type="submit" value="Delete" class="btn btn-danger m-3 rounded-pill" />
                            <a asp-action="Index" class="btn btn-secondary rounded-pill m-3">   @local["Decline"]</a>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
