@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizer<Shared> local

    @model DataLayer.Models.Book

@{
    ViewData["Title"] = "Details";
}
<h1 class="logo-right hidden-xs margin-bottom-60">  @local["Books"]</h1>
<div class="tm-right-inner-container">
    <h1 class="templatemo-header"> </h1>



    <div class="tm-right-inner-container">

        <h2 class="templatemo-header" style="color :#17A2B8">   @local["Book Details"]   </h2>
        <section class="ftco-section">
            <div class="container">
            
                <div class="row">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @local["Name"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @local["Aurther"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Aurther)
                        </dd>
                        <dt class="col-sm-4">
                            @local["Quantity"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                        <dt class="col-sm-4">
                            @local["Price"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                    </dl>
                    <div class="col-md-6">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning rounded-pill "> @local["Edit"]</a>

                        <a asp-action="DownloadPDF" asp-route-id="@Model?.Id" class="btn btn-success rounded-pill ">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-down" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M3.5 6a.5.5 0 0 0-.5.5v8a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5v-8a.5.5 0 0 0-.5-.5h-2a.5.5 0 0 1 0-1h2A1.5 1.5 0 0 1 14 6.5v8a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 14.5v-8A1.5 1.5 0 0 1 3.5 5h2a.5.5 0 0 1 0 1z" />
                                <path fill-rule="evenodd" d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z" />
                            </svg> PDF
                        </a>
                        <a asp-action="Index" class="btn btn-dark rounded-pill"> @local["Back to List"]</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
